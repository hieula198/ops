{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ECRSpecificRepository",
      "Effect": "Allow",
      "Action": [
        "ecr:GetAuthorizationToken"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ECRRepositoryAccess",
      "Effect": "Allow",
      "Action": [
        "ecr:BatchCheckLayerAvailability",
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:InitiateLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:CompleteLayerUpload",
        "ecr:PutImage"
      ],
      "Resource": [
        "arn:aws:ecr:us-east-1:<ACCOUNT_ID>:repository/<PROJECT_NAME>-backend-service",
        "arn:aws:ecr:us-east-1:<ACCOUNT_ID>:repository/<PROJECT_NAME>-frontend-service"
      ]
    },
    {
      "Sid": "ECSSpecificCluster",
      "Effect": "Allow",
      "Action": [
        "ecs:DescribeClusters"
      ],
      "Resource": "arn:aws:ecs:us-east-1:<ACCOUNT_ID>:cluster/<PROJECT_NAME>-ecs-cluster"
    },
    {
      "Sid": "ECSSpecificService",
      "Effect": "Allow",
      "Action": [
        "ecs:DescribeServices",
        "ecs:UpdateService",
        "ecs:DescribeTasks",
        "ecs:ListTasks"
      ],
      "Resource": [
        "arn:aws:ecs:us-east-1:<ACCOUNT_ID>:service/<PROJECT_NAME>-ecs-cluster/*",
        "arn:aws:ecs:us-east-1:<ACCOUNT_ID>:cluster/<PROJECT_NAME>-ecs-cluster/*"
      ]
    },
    {
      "Sid": "ECSTaskDefinitionFamily",
      "Effect": "Allow",
      "Action": [
        "ecs:DescribeTaskDefinition",
        "ecs:RegisterTaskDefinition"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": "arn:aws:iam::<ACCOUNT_ID>:role/<PROJECT_NAME>-*"
    }
  ]
}